<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="courseBorderPane"
            fx:controller="sample.CourseWindowController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button mnemonicParsing="false" text="Button" />
            </items>
        </ToolBar>
    </top>
    <left>
        <VBox>
            <ListView fx:id="levelListView">
            </ListView>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="248.0">
                <Button text="Add level" onAction="#addLevel"/>
                <Button text="Edit level" onAction="#editLevel"/>
                <Button text="Remove level" onAction="#removeLevel"/>
                <Button fx:id="closeButton" text="Exit course" onAction="#exitCourse"/>
            </HBox>
        </VBox>
    </left>

    <center>
        <VBox prefHeight="423.0" prefWidth="248.0">
            <TableView fx:id="courseTableView" prefHeight="382.0" prefWidth="248.0" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn fx:id="columnID" text="Word ID" />
                    <TableColumn fx:id="columnForeign" text="Foreign" />
                    <TableColumn fx:id="columnTranslation" text="Translation" />
                </columns>
            </TableView>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="248.0">
                <Button text="Add word" onAction="#addWord"/>
                <Button text="Edit word" onAction="#editWord"/>
                <Button text="Remove word" onAction="#removeWord"/>
                <Button text="Review all" onAction="#reviewAllWords"/>
                <Button text="Review level" onAction="#reviewLevelWords"/>
                <opaqueInsets>
                    <Insets top="10.0" />
                </opaqueInsets>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <Label text="Created by Michał Wszołek. Version: 1.0.0" />
    </bottom>

</BorderPane>


