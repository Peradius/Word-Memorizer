<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import sample.Data.Word?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.AddNewCourseController"
            prefHeight="400.0" prefWidth="600.0">

    <headerText>
        Add a new course!
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Course Name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="courseNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Database Name: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="databaseNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Teaching language: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="teachingLanguageField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="User's language: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="courseLanguageField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
